# Production Environment Configuration Template
# Copy this file to .env.production and replace placeholder values

VITE_API_URL=https://your-domain.com/api
PORT=3001
DB_PATH=./backend/classicpos.db
CORS_ORIGIN=https://your-domain.com
NODE_ENV=production

# Authentication & Security
# CRITICAL: Generate a secure JWT secret using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_SECURE_GENERATED_SECRET
JWT_EXPIRES_IN=1h

# MFA Configuration
MFA_RATE_LIMIT_WINDOW_MS=60000
MFA_MAX_ATTEMPTS=5

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-email@example.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=ClassicPOS <noreply@your-domain.com>

# Logging
LOG_LEVEL=info
